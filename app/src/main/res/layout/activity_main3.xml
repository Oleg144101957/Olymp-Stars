<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/amazing_background"
    tools:context=".Main3Activity">

    <FrameLayout
        android:id="@+id/scoresFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/chibola_shaded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/scores_background"
            android:contentDescription="@string/scores_background" />

        <TextView
            android:id="@+id/scoresTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteolympus"
            android:textSize="32sp"
            android:text="@string/score_0"
            android:layout_gravity="center"/>
    </FrameLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/element_playsurface_7"
        android:columnCount="4"
        android:rowCount="6"
        android:padding="18dp"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoresFrame">

        <!-- Row 1 -->
        <ImageView
            android:id="@+id/imageView00"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView03"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView40"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView42"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="center"
            android:src="@drawable/element_gold_2" />
    </GridLayout>

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteolympus"
        android:text="@string/time_0"
        android:textSize="32sp"
        android:fontFamily="@font/chibola_shaded"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gridLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>